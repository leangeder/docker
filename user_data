#cloud-config

hostname: master 
ssh_authorized_keys:
    - 'ssh-rsa  gregoryb@qinec'
write_files:
    -
        path: /etc/resolv.conf
        permissions: '0644'
        owner: root
        content: "nameserver 62.210.16.6\nnameserver 62.210.16.7\n"
    -
        path: /etc/environment
        permissions: '0644'
        owner: root
        content: "COREOS_PUBLIC_IPV4=195.154.103.115\nCOREOS_PRIVATE_IPV4=127.0.0.1\n"
coreos:
    update:
        group: stable
        reboot-strategy: reboot
        server: https://customer.update.core-os.net/v1/update/
    etcd:
        name: master
        discovery: https://discovery.etcd.io/50895221b5344ca514b4eb75ccdd02bb
        # multi-region and multi-cloud deployments need to use $public_ipv4
        addr: $public_ipv4:4001
        peer-addr: $public_ipv4:7001
    units:
        - name: 00-eno1.network
          runtime: true
          content: "[Match]\nName=eno1\n\n[Network]\nDHCP=yes\n\n[DHCP]\nUseMTU=9000\n"
        - name: etcd.service
          command: start
        - name: fleet.service
          command: start
